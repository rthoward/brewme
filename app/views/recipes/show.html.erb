<p id="notice"><%= notice %></p>

<%= render partial: 'recipes/desc/title', object: @recipe %>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab">Recipe</a></li>
    <li><a href="#tab2" data-toggle="tab">Related Tweaks</a></li>
  </ul>
  
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <%= render partial: 'recipes/desc/description', object: @recipe %>
    </div>
    <div class="tab-pane" id="tab2">
      <% if @recipe.is_mod? && @recipe.has_siblings? %>
        <%= render partial: 'recipes/desc/siblings', object: @recipe %>
      <% else %>
        <p>No other tweaks from <%= @recipe.name %></p>
      <% end %>
  </div>
</div>

<%= link_to 'Edit', modify_path(@recipe), class: "btn btn-info" %>