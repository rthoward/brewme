<h1><%= @user.name %>'s profile</h1>

<div class="row">
  <div class="span5 well ">
    <h2><%= @user.name %>'s recipes</h2>
    <% if @user.recipes.any? %>      
      <ul class="user-lists">
      <% @user.recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe %></li>
      <% end %>
      </ul>
    <% end %>
  </div>

  <div class="span5 offset1 well">
    <h2><%= @user.name %>'s favortie recipes</h2>
    <ul class="user-lists">
      <li></li>
    </ul>
  </div>

</div>